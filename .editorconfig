# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 2

[*.json]
charset = utf-8
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.js]
charset = utf-8
trim_trailing_whitespace = true
indent_brace_style = K&R
curly_bracket_next_line = false
continuation_indent_size = 2


# See https://github.com/dotnet/roslyn/blob/master/src/Workspaces/CSharp/Portable/Formatting/CSharpFormattingOptions.cs
# includes older, alternative and compatibility declarations (to be cleaned up) possibly used by non-roslyn editors
[*.{cs,cshtml}]
charset = utf-8
trim_trailing_whitespace = true
indent_brace_style = K&R
curly_bracket_next_line = false
continuation_indent_size = 2

csharp_new_lines_for_braces_in_types = false
csharp_new_lines_for_braces_in_methods = false
csharp_new_lines_for_braces_in_properties = false
csharp_new_lines_for_braces_in_accessors = false
csharp_new_lines_for_braces_in_anonymous_methods = false
csharp_new_lines_for_braces_in_control_blocks = false
csharp_new_lines_for_braces_in_object_collection_array_initializers = false
csharp_new_lines_for_braces_in_lambda_expression_body = false

csharp_new_line_for_else = true
csharp_new_line_before_else = true

csharp_new_line_for_catch = true
csharp_new_line_before_catch = true

csharp_new_line_for_finally = true
csharp_new_line_before_finally = true

csharp_new_line_for_members_in_object_init = false
csharp_new_line_before_members_in_object_init = false
csharp_new_line_before_members_in_object_initializers = false

csharp_new_lines_for_braces_in_anonymous_types = false
csharp_new_line_for_members_in_anonymous_types = false
csharp_new_line_before_members_in_anonymous_types = false

csharp_new_line_for_clauses_in_query = false
csharp_new_line_before_clauses_in_query = false

csharp_new_line_for_open_brace = none
csharp_new_line_before_open_brace = none

csharp_indent_switch_labels = true
csharp_indent_case_contents = true
csharp_label_positioning = noIndent

